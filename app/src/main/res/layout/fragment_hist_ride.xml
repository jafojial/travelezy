<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cm.intelso.dev.travelezi.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/component_bg"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_planning_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_bg_top"
                android:foreground="?android:attr/actionModeFindDrawable"
                android:foregroundGravity="left|center_vertical"
                android:gravity="start|center_vertical"
                android:paddingStart="40dp"
                android:paddingLeft="40dp"
                android:text="@string/ride_history"
                tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck"
                tools:targetApi="m" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/planning_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/component_bg">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
