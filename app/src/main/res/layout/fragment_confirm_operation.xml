<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="cm.intelso.dev.travelezi.ConfirmOperationFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:text="Détails de l'opération"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_infos_operation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:gravity="fill_horizontal"
                android:text="Ticket information"
                android:textColor="@color/black_color"
                android:lines="15"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/button_cancel_confirm_operation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ANNULER"
                    android:background="@color/primary"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/button_ok_confirm_operation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VALIDER"
                    android:background="@color/primary"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:layout_margin="5dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
